%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %title MindFlowy
    %meta{:content => "Your description", :name => "description"}/
    %meta{:content => "Your,Keywords", :name => "keywords"}/
    %meta{:content => "ResponsiveWebInc", :name => "author"}/
    %meta(name="google-site-verification" content="Pq_I5K_rMBuSJdMKgtwi6iMvrI7I8eGjpn-XCYhdWfQ")
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link(type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600")
    %link(type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700")
    %link{:href => "styles/main.css", :rel => "stylesheet"}/
    / build:js scripts/vendor/modernizr.js
    %script{:src => "bower_components/modernizr/modernizr.js"}
