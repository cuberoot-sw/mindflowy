    .container
      .row
        .col-md-8.col-sm-8
          %p
            Take control by visualizing all your open loops, tasks, and ideas in your Brain.
      .row.service
        .col-md-9.col-sm-9
          %ul#records
            %li.item#recordTemplate
              %span.editable(contenteditable="true")
              %a.delete{:href => "#"}
                %i.fa.fa-times
              %ul

        #sidebar.col-md-3.col-sm-3
          %h3
            %i.fa.fa-keyboard-o.fa-lg
          %table.table.table-striped
            %tr
              %td
                %kbd Click
              %td
                an item and start typing
            %tr
              %td
                %kbd Enter
              %td
                add a new item
            %tr
              %td
                %kbd Tab
              %td
                indent
            %tr
              %td
                %kbd Shift+Tab
              %td
                un-indent
            %tr
              %td
                %kbd Up Arrow
              %td
                select item above
            %tr
              %td
                %kbd Down Arrow
              %td
                select item bellow



      #myLogin.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h4#myModalLabel.modal-title Login
            .modal-body
              %form.form-horizontal
                %fieldset
                  / Form Name
                  %legend/
                  %h3 Have an account? Sign In
                  / Text input
                  .form-group
                    %label.col-md-1.control-label{:for => "lemail"}
                    .col-md-12
                      %input#lemail.form-control.input-md{:name => "lemail", :placeholder => "Email", :type => "email"}/
                  / Password input
                  .form-group
                    %label.col-md-1.control-label{:for => "lpassword"}
                    .col-md-12
                      %input#lpassword.form-control.input-md{:name => "lpassword", :placeholder => "Password", :type => "password"}/
                  / Button (Double)
                  .form-group
                    .col-md-5
                      %button#login.btn.btn-block.btn-success(name="login") Login
                    .col-md-5


      #mySignup.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h4#myModalLabel.modal-title Sign up
            .modal-body
              %form.form-horizontal
                %fieldset
                  / Form Name
                  %legend/
                  / Text input
                  .form-group
                    %label.col-md-1.control-label{:for => "semail"}
                    .col-md-12
                      %input#semail.form-control.input-md{:name => "semail", :placeholder => "Email", :type => "email"}/
                  / Password input
                  .form-group
                    %label.col-md-1.control-label{:for => "spassword"}
                    .col-md-12
                      %input#spassword.form-control.input-md{:name => "spassword", :placeholder => "Password", :type => "password"}/
                  / Button (Double)
                  .form-group
                    .col-md-5
                      %button#signup.btn.btn-block.btn-success(name ="signup") Sign up
                    .col-md-5


