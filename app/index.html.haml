    / Favicon
    %link{:href => "#", :rel => "shortcut icon"}/
  %body(spellcheck="false")
    / Header  Starts
    #undefined-sticky-wrapper.sticky-wrapper{:style => "height: 90px;"}
      %header{:style => ""}
        / Container
        .container
          .row
            .col-md-3.col-sm-3
              / Logo
              .logo
                %h1
                  %a{:href => "/"}
                    %i.fa.fa-sitemap
                    MindFlowy
                %h5 Your Digital Brain
            .col-md-8.col-sm-8
              / Navigation
              .navi
                / Menu
                #ddtopmenubar.mattblackmenu
                  / UnorderedList
                  %ul
                    %li
                      %a#account{:href => "#"} Account
                      %a#signout{:href => "#"} Sign out
                    %li#forSignup
                      %a{"data-target" => "#mySignup", "data-toggle" => "modal"}
                        Sign up
                    %li#forLogin
                      %a{"data-target" => "#myLogin", "data-toggle" => "modal"}
                        Login
                    %li
                      %a.twitter-share-button{"data-text" => "Check out undefined by cuberoot", "data-url" => "http://ss14-team-59.divshot.io", "data-via" => "staticshowdown", :href => "https://twitter.com/share"} Tweet
